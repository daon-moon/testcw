{
        "metrics": {
                "append_dimensions": {
                        "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
                        "InstanceId": "${aws:InstanceId}",
                        "InstanceType": "${aws:InstanceType}"
                },
                "metrics_collected": {
                        "cpu": {
                                "measurement": [                                                                                
                                        "cpu_usage_active"
                                ],
                                "metrics_collection_interval": 60,
                                "resources": [
                                        "*"
                                ],
                                "append_dimensions": {
                                        "prod-cpu": "cpu"
                                        },
                                "totalcpu": true
                                },
                        "disk": {
                                "measurement": [
                                        "disk_used_percent"
                                ],
                                "metrics_collection_interval": 60,
                                "resources": [
                                        "/"
                                ],
                                "append_dimensions": {
                                        "prod-disk": "disk"
                                        }
                                },
                        "mem": {
                                "measurement": [
                                        "mem_used_percent"
                                ],
                                "metrics_collection_interval": 60,
                                "append_dimensions": {
                                        "prod-mem": "mem"
                                        }
                        }
                }
        }
}
