{
        "metrics": {
                "append_dimensions": {
                        "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
                        "InstanceId": "${aws:InstanceId}",
                        "InstanceType": "${aws:InstanceType}"
                },
                "metrics_collected": {
                        "cpu": {
                                "measurement": [
                                        "cpu_usage_idle",
                                        "cpu_usage_iowait",
                                        "cpu_usage_user",
                                        "cpu_usage_system"
                                ],
                                "metrics_collection_interval": 300,
                                "resources": [
                                        "*"
                                ],
                                "append_dimensions": {
                                        "CPU-PROD": "ERP" 
                                        },
                                "totalcpu": false 
                                },
                        "disk": {
                                "measurement": [
                                        "used_percent",
                                        "inodes_free"
                                ],
                                "metrics_collection_interval": 300,
                                "resources": [
                                        "*"
                                ],
                                "append_dimensions": {
                                        "DISK-PROD": "ERP"          
                                        }
                                },
                        "mem": {
                                "measurement": [
                                        "mem_used_percent"
                                ],
                                "metrics_collection_interval": 300,
                                "append_dimensions": {
                                        "MEM-PROD": "ERP"          
                                        }
                        }
                }
        }
}
